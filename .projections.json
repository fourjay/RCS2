{
    "README.md": {
        "type": "readme"
    },
    "autoload/*.vim": {
        "alternate": "t/{basename}.vader",
        "type": "autoload"
    },
    "doc/*.txt": {
        "type": "doc"
    },
    "ftplugin/*.vim": {
        "type": "ftplugin"
    },
    "plugin/rcs.vim": {
        "type": "plugin"
    },
    "syntax/*.vim": {
        "type": "syntax"
    },
    "t/*.vader": {
        "alternate": [
            "autoload/{}.vim",
            "autoload/rcs/{}.vim"
        ],
        "make": "vim -c Vader t/*",
        "type": "test"
    }
}
